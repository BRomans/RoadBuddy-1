<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/developers_preferences_header"
        android:key="pref_key_storage_settings">

        <SwitchPreferenceCompat
            android:key="pref_dev_enabled"
            android:summary="@string/pref_dev_settings_enabled_summary"
            android:title="@string/pref_dev_settings_enabled_title" />

        <EditTextPreference
            android:key="pref_dev_user_name"
            android:dependency="pref_dev_enabled"
            android:summary="@string/pref_dev_user_name_summary"
            android:title="@string/pref_dev_user_name_title" />

    </PreferenceCategory>

</PreferenceScreen>