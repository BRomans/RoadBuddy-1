<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:gravity="left"
    android:id="@+id/lyMapButtons">
     <com.github.clans.fab.FloatingActionButton
            android:id="@+id/elimina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_location_off_white_24dp"
            fab:fab_label="Elimina selezionato"
            style="@style/NoRestMenuButtonsStyle"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/annulla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_clear_white_24dp"
            fab:fab_label="Annulla"
            style="@style/NoRestMenuButtonsStyle"/>


        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fatto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_done_all_white_24dp"
            fab:fab_label="Fatto"
            style="@style/NoRestMenuButtonsStyle"/>

</LinearLayout>

