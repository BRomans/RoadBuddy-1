<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/MyCardViewStyle"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/path_id"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="contact det"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:layout_weight="0.25" />

        <TextView
            android:id="@+id/path_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="10dp"
            android:layout_below="@id/path_id"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textColor="@android:color/white"
            android:layout_weight="0.25" />

        <TextView
            android:id="@+id/path_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="10dp"
            android:layout_below="@id/path_owner"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textColor="@android:color/white"
            android:layout_weight="0.25" />
        <TextView
            android:id="@+id/path_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:textSize="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_alignBaseline="@id/path_duration"
            android:textColor="@android:color/white"
            android:layout_weight="0.25" />
    </RelativeLayout>
    </android.support.v7.widget.CardView>
